    [deletButt setTitle:@"åˆ é™¤" forState:UIControlStateNormal];
    deletButt.imageEdgeInsets=UIEdgeInsetsMake(0, 25, 0, 0);
    deletButt.titleEdgeInsets=UIEdgeInsetsMake(0, 25, 0, 0);
